<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aliaa.sampleappassignment.MainActivity"
    android:layoutDirection="rtl"
    android:background="@color/grayBG">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_above="@id/footer">
    </FrameLayout>
    <RelativeLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp">
        <View android:id="@+id/footer_line"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/colorHeader"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="@color/footerGray"
            android:layout_below="@id/footer_line"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <ImageButton
                android:id="@+id/imgbtn_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"

                android:tint="@color/gray3"
                android:background="@color/footerGray"/>

            <ImageButton
                android:id="@+id/imgbtn_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/category"
                android:tint="@color/gray3"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:background="@color/footerGray"/>


            <ImageButton
                android:id="@+id/imgbtn_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/account"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:tint="@color/gray3"
                android:background="@color/footerGray"/>

            <ImageButton
                android:id="@+id/imgbtn_config"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/config"
                android:layout_centerHorizontal="true"
                android:layout_weight="1"
                android:tint="@color/gray3"
                android:background="@color/footerGray"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
